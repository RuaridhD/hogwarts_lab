<p>Form to update student details</p>

<form action="/hogwarts/<%= @student.id %>/edit" method="post">
<label for="first_name">First Name:</label>
<input type="text" id="first_name" name="first_name" value="<%= @student.first_name %>">

<label for="last_name">Last Name:</label>
<input type="text" id="last_name" name="last_name" value="<%= @student.last_name %>">

<label for="age">Age:</label>
<input type="number" name="age" value="<%= @student.age %>" id="age">

<label for="house">House:</label>
<select name="house" id="house" option value="<%= @student.house %>">
  <option value="Gryffindor" <%= "selected" if @student.house == "Gryffindor" %>>Gryffindor</option>
  <option value="Slytherin" <%= "selected" if @student.house == "Slytherin" %>>Slytherin</option>
  <option value="Hufflepuff" <%= "selected" if @student.house == "Hufflepuff" %>>Hufflepuff</option>
  <option value="Ravenclaw" <%= "selected" if @student.house == "Ravenclaw" %>>Ravenclaw</option>
</select>

<input type="submit" value="Update Details">


</form>






<p>First Name: <%=@student.first_name %></p>
<p>Last Name: <%=@student.last_name %></p>
<p>Age: <%=@student.age %></p>
<p>House: <%=@student.house %></p>
